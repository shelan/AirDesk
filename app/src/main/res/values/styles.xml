<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff1ca8f4</item>
        <item name="colorPrimaryDark">#0288D1</item>

    </style>


    <style name="FrontTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Airdesk.WithTitle</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Airdesk.WithTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>
</resources>
